{
  "name": "SolMessenger",
  "version": "0.1.0",
  "description": "Messenger app",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "start": "rimraf -rf dist/ && npm run build && node server.js",
    "build": "rimraf -rf dist/ && parcel build 'src/*.html' --public-url ./",
    "dev": "rimraf -rf dist/ && parcel src/index.html -p 3000",
    "lint:js": "npx eslint --fix . --ext .js,.jsx,.ts,.tsx",
    "lint:css": "npx stylelint **/*.scss --fix",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.7.0",
    "@parcel/transformer-sass": "^2.7.0",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^20.0.1",
    "@types/mocha": "^10.0.0",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.3.7",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^20.0.2",
    "mocha": "^10.1.0",
    "parcel": "^2.7.0",
    "parcel-transformer-pug-precompile": "^1.0.6",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.2",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "author": {
    "name": "Alexandr Kazakov",
    "email": "alexandr.kazakov1@gmail.com",
    "url": "https://github.com/alexandr-kazakov"
  },
  "dependencies": {
    "connect-history-api-fallback": "2.0.0",
    "deb": "^0.2.1",
    "express": "4.18.1",
    "nanoid": "^3.3.4",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "stylelint-config-standard-scss": "5.0.0"
  }
}
